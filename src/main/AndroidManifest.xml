<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learntodroid.Fusion_fitness">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Fusion Fitness"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.learntodroid.Fusion_fitness.Activities"></activity>
        <activity android:name="com.learntodroid.Fusion_fitness.Registration"></activity>
        <activity android:name="com.learntodroid.Fusion_fitness.getInfo"></activity>
        <activity android:name="com.learntodroid.Fusion_fitness.Profile"></activity>
        <activity android:name="com.learntodroid.Fusion_fitness.Community"></activity>
        <activity android:name="com.learntodroid.Fusion_fitness.Leaderboard"></activity>
        <activity android:name="com.learntodroid.Fusion_fitness.loginScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
